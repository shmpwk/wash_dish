<launch>
  <arg name="gui" default="true"/>
  <arg name="use_sim" default="true"/>
  <include file="$(find wash_dish)/launch/heightmap_converter.launch">
      <arg name="gui" value="false"/>
      <arg name="use_sim" value="$(arg use_sim)"/>
  </include>

  <node name="morpho_manager"
        pkg="nodelet" type="nodelet"
        args="manager"/>
  
  <node name="heightmap_morphological_filtering"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/HeightmapMorphologicalFiltering morpho_manager">
        <remap from="~input" to="heightmap_converter/output"/>
        <rosparam>
            mask_size: 10
            max_variance: 10
            use_bilateral: true
        </rosparam>
  </node>

  <group if="$(arg gui)">
    <node name="colorize_float_image_heightmap"
          pkg="nodelet" type="nodelet"
          args="load jsk_perception/ColorizeFloatImage morpho_manager">
      <remap from="~input" to="heightmap_converter/output"/>
      <rosparam>
        channel: 0
      </rosparam>
    </node>

    <node name="colorize_float_image_filtered_heightmap"
          pkg="nodelet" type="nodelet"
          args="load jsk_perception/ColorizeFloatImage morpho_manager">
      <remap from="~input" to="heightmap_morphological_filtering/output"/>
      <rosparam>
        channel: 0
      </rosparam>
    </node>

    <node name="rviz"
          pkg="rviz" type="rviz"
          args="-d $(find jsk_pcl_ros)/sample/rviz/heightmap_morphological_filtering.rviz"/>
  </group>
</launch>
