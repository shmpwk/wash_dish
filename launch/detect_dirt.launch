<launch>
  <arg name="manager" default="pointcloud" />
  <arg name="points" default="/head_camera_remote/depth_registered/points" />

  <group ns="pcl_nodelet">
    <node name="$(arg manager)" pkg="nodelet" type="nodelet" args="manager"
            output="screen" />


    <node name="boxfilter_pre" pkg="nodelet" type="nodelet"
      args="load jsk_pcl/AttentionClipper $(arg manager)" output="screen">
      <remap from="~input/points" to="$(arg points)"/>
      <rosparam>
        use_multiple_attention: false
        initial_pos: [0.4, -0.04, 0.8]
        initial_rot: [0, 0, 0]
        dimension_x: 1.3
        dimension_y: 1.3
        dimension_z: 0.3
        frame_id: base_footprint
      </rosparam>
    </node>

    <node name="ExtractIndices" pkg="nodelet" type="nodelet"
      args="load jsk_pcl/ExtractIndices $(arg manager)" output="screen">
      <remap from="~input" to="$(arg points)"/>
      <remap from="~indices" to="/pcl_nodelet/boxfilter_pre/output/point_indices"/>
      <rosparam>
        keep_organized: true
      </rosparam>
    </node>

    <node name="BowlPositions" pkg="wash_dish" type="merge_bowl_positions.py">
    </node>

    <node name="hsi_filter_white" pkg="nodelet" type="nodelet"
      args="load jsk_pcl/HSIColorFilter $(arg manager)" 
      output="screen">
      <!--remap from="~input" to="/pcl_nodelet/point_cloud_one_look" /-->
      <remap from="~input" to="/pcl_nodelet/ExtractIndices/output" />
      <rosparam>
        use_indices: false
        keep_organized: false
      </rosparam>
      <param name="h_limit_max" value="127" />
      <param name="h_limit_min" value="-128" />
      <param name="s_limit_max" value="10" />
      <param name="s_limit_min" value="0" />
      <param name="i_limit_max" value="255" />
      <param name="i_limit_min" value="240" />
    </node>

    <node name="hsi_filter_brown" pkg="nodelet" type="nodelet"
      args="load jsk_pcl/HSIColorFilter $(arg manager)" 
      output="screen">
      <!--remap from="~input" to="/pcl_nodelet/point_cloud_sequence_merged" /-->
      <remap from="~input" to="/pcl_nodelet/ExtractIndices/output" />
      <rosparam>
        use_indices: false
        keep_organized: false
      </rosparam>
      <param name="h_limit_max" value="118" />
      <param name="h_limit_min" value="-110" />
      <param name="s_limit_max" value="255" />
      <param name="s_limit_min" value="0" />
      <param name="i_limit_max" value="151" />
      <param name="i_limit_min" value="-255" />
    </node>

    <node name="LabelDirt" pkg="jsk_2019_10_spatula" type="detect_dirt.py">
    </node>

  </group>

</launch>
